{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "singularName": "restaurant",
    "pluralName": "restaurants",
    "displayName": "Рестораны"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "text",
      "required": true,
      "unique": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "idOpera": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "isVorking": {
      "type": "boolean"
    },
    "address": {
      "type": "text",
      "default": "Адрес",
      "required": true
    },
    "description": {
      "type": "text",
      "default": "Описание",
      "required": true
    },
    "itemImage": {
      "type": "component",
      "component": "shared.item-image",
      "repeatable": true,
      "max": 10
    }
  }
}
